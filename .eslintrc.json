{
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
          "jsx": true,
          "modules": true
      },
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "react/display-name": 0,
      "react/prop-types": 0,
      "no-console": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    } 
}