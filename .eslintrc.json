{
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "mocha": true,
      "jasmine": true
    },
    "parserOptions": {
      "ecmaFeatures": {
          "jsx": true,
          "modules": true
      },
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": ["Jasmine"],
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "react/display-name": 0,
      "react/prop-types": 0,
      "no-console": 0,
      "spaced-comment": [
        2,
        "always"
      ],
      "no-trailing-spaces": 2,
      "key-spacing": [
        2,
        {
          "beforeColon": false,
          "afterColon": true
        }
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    } 
}